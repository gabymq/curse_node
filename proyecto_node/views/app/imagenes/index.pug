extends ../../layout.pug
block Contenido
    div(class="container")
        h1  Mis Imagenes
        for imagen in imagenes
            .white.border.tr.large-padding
                .row
                    .col-md-10
                        h2=imagen.title
                    .col-md-2
                        a(href="/app/imagenes/#{.imagen_id}/edit", class="right_space") Editar
                        a(href="/app/imagenes/#{.imagen_id}/") Eliminar

